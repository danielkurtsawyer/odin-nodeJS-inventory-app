<a href="/products/<%= product.product_id %>" class="product-card" style="background-color: <%= product.category_color %>;">
  <img src="<%= product.product_image_url %>" alt="<%= product.product_name %>">
  <div class="product-info">
    <h4>$<%= product.price %></h4>
    <p class="product-name"><%= product.product_name %></p>
    <p class="small-text"><%= product.brand_name %> </p>
    <p class="small-text">Quantity: <%= product.quantity %></p>
  </div>
</a>